/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	main {
		flex-grow: 1;
	}

	h2 {
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}

	p {
		margin-bottom: 1.5rem;

		&:last-child {
			margin-bottom: 0;
		}
	}

	pre {
		display: grid;
	}
}
